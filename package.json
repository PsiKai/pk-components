{
  "name": "pk-components",
  "description": "A component library for React",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "library"
  ],
  "version": "0.3.2",
  "type": "module",
  "scripts": {
    "dev": "vite --open --port 3001",
    "build:lib": "tsc -b && vite build --mode lib",
    "build:demo": "tsc -b && vite build --mode demo",
    "lint": "eslint .",
    "preview": "npm run build:demo && node server.js",
    "test": "vitest run --coverage",
    "component": "node scripts/component-creation"
  },
  "files": [
    "./dist"
  ],
  "main": "./dist/pk-components.umd.cjs",
  "module": "./dist/pk-components.js",
  "require": "./dist/pk-components.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/pk-components.js",
      "require": "./dist/pk-components.umd.cjs",
      "main": "./dist/pk-components.umd.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-istanbul": "^2.1.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "express": "^4.21.0",
    "globals": "^15.9.0",
    "jsdom": "^25.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-dts": "^4.2.1",
    "vitest": "^2.1.1"
  }
}
